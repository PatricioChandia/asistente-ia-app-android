<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bubble_assistant"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo de la Nota"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvNoteContentPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vista previa del contenido de la nota..."
        android:textColor="#444444"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvNoteTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2025-11-06 12:00:00"
        android:textColor="#666666"
        android:textSize="12sp"
        android:gravity="end"/>

</LinearLayout>